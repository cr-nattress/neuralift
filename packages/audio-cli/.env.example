# Neuralift Audio CLI - Environment Variables
# Copy this file to .env and fill in your values

# ===================
# LLM API Keys
# ===================

# OpenAI API key (required for TTS generation)
OPENAI_API_KEY=sk-your-openai-api-key

# Anthropic API key (optional, for LLM features)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key

# Google API key (optional, for Gemini LLM)
GOOGLE_API_KEY=your-google-api-key

# ===================
# GCP Configuration
# ===================

# GCP project ID
GCP_PROJECT_ID=your-gcp-project-id

# GCP Cloud Storage bucket name
GCP_BUCKET_NAME=neuralift-audio

# Path to GCP service account key file (JSON)
# Leave empty to use Application Default Credentials
GCP_KEY_FILE=

# ===================
# Provider Defaults
# ===================

# Default LLM provider (openai, anthropic, gemini)
DEFAULT_LLM_PROVIDER=openai

# Default TTS provider (openai, google)
DEFAULT_TTS_PROVIDER=openai

# ===================
# Output Settings
# ===================

# Directory for generated audio files
OUTPUT_DIR=./audio-output

# Enable verbose logging
VERBOSE=false

# ===================
# Supabase
# ===================

SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key
